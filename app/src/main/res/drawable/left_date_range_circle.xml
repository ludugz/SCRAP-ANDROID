<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <corners
                android:radius="15dp"/>
            <stroke android:width="2dp"
                android:color="@color/color_black"/>
            <solid android:color="@color/color_black" /> <!-- border color -->
        </shape>
    </item>

    <item
        android:left="15dp"
        android:top="0dp">   <!-- adjust borders width here -->
        <shape android:shape="rectangle">
            <solid android:color="@color/color_black" />  <!-- background color -->
        </shape>
    </item>
</layer-list>