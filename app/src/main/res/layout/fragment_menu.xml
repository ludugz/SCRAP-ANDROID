<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/menu_bg"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        >
        <ImageView
            android:id="@+id/my_awesome_toolbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/main_header_old"
            android:visibility="visible"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true">


        </ImageView>
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="28dp"
            android:layout_marginRight="18dp"
            android:id="@+id/bt_news"
            android:src="@drawable/ic_news"
            android:background="@android:color/transparent"
            android:visibility="gone"
            />

    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/my_toolbar"
        xmlns:android="http://schemas.android.com/apk/res/android"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_view_coupon"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/menu_item_bg"
                android:orientation="horizontal"
                android:visibility="visible"
                >

                <TextView
                    android:text="@string/coupon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:textSize="9pt"
                    android:textStyle="bold"
                    android:layout_weight="0.5"
                    android:textColor="@color/color_black"
                    />
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/arrow"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.5"
                    />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/line_invite"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/menu_item_bg"
                android:orientation="horizontal"
                android:visibility="visible"
                >

                <TextView
                    android:text="@string/invite_your_friends"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:textStyle="bold"
                    android:textSize="9pt"
                    android:enabled="false"
                    android:layout_weight="0.5"
                    android:textColor="@color/color_black"
                    />
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/arrow"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.5"

                    />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/line_get_coupon"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/menu_item_bg"
                android:orientation="horizontal"
                android:visibility="visible"
                >

                <TextView
                    android:text="@string/get_coupon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:textStyle="bold"
                    android:textSize="9pt"
                    android:enabled="false"
                    android:layout_weight="0.5"
                    android:textColor="@color/color_black"
                    />
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/arrow"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.5"

                    />

            </LinearLayout>
            <LinearLayout

                android:id="@+id/line_food"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/menu_item_bg"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:text="@string/food"
                    android:textSize="9pt"
                    android:textStyle="bold"
                    android:textColor="@color/color_black"
                    android:layout_weight="0.5"/>
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/arrow"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.5"
                    />

            </LinearLayout>
            <LinearLayout

                android:id="@+id/line_goods"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/menu_item_bg"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:text="@string/goods"
                    android:textSize="9pt"
                    android:textStyle="bold"
                    android:textColor="@color/color_black"
                    android:layout_weight="0.5"/>
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/arrow"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.5"
                    />

            </LinearLayout>
            <LinearLayout
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:background="@drawable/menu_item_bg"
                android:visibility="gone"
                >

                <TextView
                    android:text="@string/riddle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:textStyle="bold"
                    android:textSize="9pt"
                    android:layout_weight="0.5"
                    android:textColor="@color/color_black"
                    />
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/arrow"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.5"

                    />

            </LinearLayout>
            <LinearLayout
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:background="@drawable/menu_item_bg"
                android:visibility="gone">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:text="@string/badge"
                    android:textSize="9pt"
                    android:textStyle="bold"
                    android:textColor="@color/color_black"
                    android:layout_weight="0.5"/>
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/arrow"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.5"
                    />

            </LinearLayout>

            <LinearLayout

                android:id="@+id/line_access"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:background="@drawable/menu_item_bg">

                <TextView
                    android:text="@string/access"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:textStyle="bold"
                    android:textSize="9pt"
                    android:layout_weight="0.5"
                    android:textColor="@color/color_black"
                    />
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/arrow"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.5"
                    />

            </LinearLayout>
            <LinearLayout

                android:id="@+id/line_faq"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/menu_item_bg"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:text="FAQ"
                    android:textSize="9pt"
                    android:textStyle="bold"
                    android:textColor="@color/color_black"
                    android:layout_weight="0.5"/>
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/arrow"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.5"
                    />

            </LinearLayout>
            <LinearLayout

                android:id="@+id/line_inquiry"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/menu_item_bg"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:text="@string/inquiry"
                    android:textSize="9pt"
                    android:textStyle="bold"
                    android:textColor="@color/color_black"
                    android:layout_weight="0.5"/>
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/arrow"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.5"
                    />

            </LinearLayout>




            <LinearLayout
                android:id="@+id/line_enter_invite_code"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/menu_item_bg"
                android:orientation="horizontal"
                android:visibility="visible"
                >

                <TextView
                    android:text="@string/enter_invite_code"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:textStyle="bold"
                    android:textSize="9pt"
                    android:enabled="false"
                    android:layout_weight="0.5"
                    android:textColor="@color/color_black"
                    />
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/arrow"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.5"
                    />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/card_view_member_info"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/menu_item_bg"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/tv_change_member"
                    android:text="@string/change_member_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:textStyle="bold"
                    android:textSize="9pt"
                    android:enabled="false"
                    android:layout_weight="0.5"
                    android:textColor="@color/color_black"
                    />
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/arrow"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.5"

                    />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/card_view_member"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/menu_item_bg"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_login_out"
                    android:text="@string/Login_logout_member_registration"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:textStyle="bold"
                    android:textSize="9pt"
                    android:layout_weight="0.5"
                    android:textColor="@color/color_black"
                    />
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/arrow"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.5"
                    />

            </LinearLayout>
            <TextView
                android:text="Version: 1.1(5211)"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/_16sdp"
                android:textStyle="bold"
                android:textSize="9pt"
                android:enabled="false"
                android:layout_weight="0.5"
                android:textColor="@color/color_black"
                android:visibility="gone"
                />

            <LinearLayout
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal"
                >
            </LinearLayout>
        </LinearLayout>

    </ScrollView>



</RelativeLayout>
