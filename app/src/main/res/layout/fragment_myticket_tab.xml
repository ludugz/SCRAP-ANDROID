<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="eplus.scrap.view.TourDetailFragment"
    android:orientation="vertical">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:id="@+id/line_content_ticket"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <android.support.design.widget.TabLayout
            android:id="@+id/tabLayout_tourdetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#1254c4"
            app:tabBackground="@color/transparent"
            app:tabTextColor="#FFFFFF"
            app:tabSelectedTextColor="#FFFF00"
            app:tabIndicatorHeight="2dp"
            app:tabIndicatorColor="#FFFF00"
            android:minHeight="?attr/actionBarSize"/>
        <android.support.v4.view.ViewPager
            android:id="@+id/viewpager_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tabLayout"
            />

    </LinearLayout>


</LinearLayout>
