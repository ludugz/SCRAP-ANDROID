<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/menu_bg"
    tools:context="eplus.scrap.view.ShareOnSNSFragment">

    <!-- TODO: Update blank fragment layout -->

    <android.support.v7.widget.Toolbar
            android:id="@+id/my_awesome_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#1254c4"
            android:minHeight="?attr/actionBarSize">
            <ImageButton
                android:id="@+id/ic_left_bt"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_left"
                android:background="@color/transparent"
                android:layout_gravity="top|left"
                android:paddingRight="@dimen/_60sdp"
                android:paddingBottom="@dimen/_8sdp"
                android:paddingTop="@dimen/_8sdp"
                />
            <TextView
                android:id="@+id/toolbar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|center_horizontal"
                android:gravity="center"
                android:text="@string/invite_friends"
                android:textColor="@android:color/white"
                android:textSize="@dimen/_16sdp"
                android:maxLines="1"
                android:ellipsize="end"
                android:textStyle="bold" />

        </android.support.v7.widget.Toolbar>
    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_height="fill_parent"
        android:layout_width="fill_parent"
        android:layout_below="@id/my_awesome_toolbar"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/line_top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_white"
                android:layout_marginLeft="@dimen/_16sdp"
                android:layout_marginRight="@dimen/_16sdp"
                android:layout_marginTop="@dimen/_16sdp"
                android:layout_marginBottom="@dimen/_8sdp"
                android:paddingBottom="@dimen/_16sdp"
                android:orientation="vertical"
                >
                <ImageView
                    android:layout_width="@dimen/_254sdp"
                    android:layout_height="@dimen/_150sdp"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/iv_social"
                    android:scaleType="fitXY"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_16sdp"
                    android:layout_marginRight="@dimen/_16sdp"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:text="@string/tmc_text_1"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/_14sdp"
                    android:textStyle="bold" />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/tmc_text_1"
                    android:layout_gravity="center_horizontal"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_16sdp"
                    android:layout_marginRight="@dimen/_16sdp"
                    android:layout_marginBottom="@dimen/_8sdp"
                    android:layout_marginTop="0dp"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:text="@string/tmc_text_2"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/_14sdp"
                    android:textStyle="bold" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_16sdp"
                    android:layout_marginRight="@dimen/_16sdp"
                    android:layout_marginBottom="@dimen/_8sdp"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:text="@string/sns_2_iv20"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/_12sdp"
                    android:textStyle="normal"
                    android:visibility="gone"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="@dimen/_16sdp"
                    android:layout_marginRight="@dimen/_16sdp"
                    android:layout_marginBottom="@dimen/_8sdp"
                    android:visibility="gone"
                    android:gravity="center"
                    >
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_line"
                        android:layout_weight="0.5"
                        />
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_facebook"
                        android:layout_weight="0.5"
                        />
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_tweeter"
                        android:layout_weight="0.5"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="あなたの招待コード"
                        android:textColor="@color/color_black"
                        android:textStyle="bold"
                        android:textSize="@dimen/_14sdp"
                        android:layout_gravity="center_horizontal"
                        />
                    <TextView
                        android:id="@+id/tv_invite_code"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_13sdp"
                        android:textColor="@color/color_black"
                        android:layout_gravity="center_horizontal"
                        android:text=""
                        />
                    <TextView
                        android:id="@+id/tv_invite_status"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:layout_marginLeft="@dimen/_16sdp"
                        android:layout_marginRight="@dimen/_16sdp"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center"
                        android:textSize="@dimen/_12sdp"
                        android:textStyle="normal" />
                </LinearLayout>


            </LinearLayout>
            <Button
                android:id="@+id/bt_share"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_below="@+id/line_top"
                android:text="@string/sns"
                android:layout_marginLeft="@dimen/_16sdp"
                android:layout_marginRight="@dimen/_16sdp"
                android:textColor="@color/color_white"
                android:textSize="@dimen/_14sdp"
                android:textAllCaps="false"
                android:background="@drawable/round_rect_button"
                />
            <TextView
                android:id="@+id/tv_msg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/bt_share"
                android:layout_marginLeft="@dimen/_16sdp"
                android:layout_marginRight="@dimen/_16sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginBottom="@dimen/_16sdp"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:text="@string/sns_iv20"
                android:textColor="@android:color/black"
                android:textSize="14sp"
                android:textStyle="normal" />
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_100sdp"
                android:layout_below="@+id/tv_msg"
                />
        </RelativeLayout>

    </ScrollView>
    <RelativeLayout
        android:id="@+id/re_no_internet_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/my_awesome_toolbar"
        android:visibility="gone"
        android:paddingBottom="@dimen/_35sdp"
        android:background="#ededed">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_vertical"

            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/clumsy_lagre"
                android:layout_gravity="center_horizontal"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_16sdp"
                android:text="@string/no_internet"
                android:textAlignment="center"
                android:visibility="visible"
                android:background="@color/transparent"
                android:layout_gravity="center_horizontal"
                android:textStyle="bold"
                android:textColor="@color/color_black"
                android:textSize="@dimen/_14sdp"

                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_16sdp"
                android:text="@string/tap_to_retry"
                android:textAlignment="center"
                android:visibility="visible"
                android:background="@color/transparent"
                android:layout_gravity="center_horizontal"
                android:textSize="@dimen/_12sdp"
                />
            <LinearLayout
                android:id="@+id/line_bt_retry"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/backround_rect_blue_color"
                android:layout_marginTop="@dimen/_16sdp"
                android:layout_marginLeft="@dimen/_26sdp"
                android:layout_marginRight="@dimen/_26sdp"
                android:paddingTop="@dimen/_12sdp"
                android:paddingBottom="@dimen/_12sdp"
                android:gravity="center"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_retry"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_4sdp"
                    android:text="@string/retry"
                    android:textColor="@color/color_white"
                    android:textStyle="bold"
                    android:textSize="@dimen/_16sdp"
                    android:gravity="center"
                    />

            </LinearLayout>


        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>
