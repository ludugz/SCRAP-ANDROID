<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="eplus.scrap.view.TourDetailFragment"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/re_product_detail_header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_120sdp"
        >

        <ImageView
            android:id="@+id/img_header"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/detail_header_bg"
            />
        <android.support.design.widget.TabLayout
            android:id="@+id/tabLayout_tourdetail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:tabMode="scrollable"
            android:background="@color/transparent"
            app:tabBackground="@drawable/tab_background"
            app:tabTextAppearance="@style/ProductDetailTextAppearance"
            app:tabTextColor="@color/color_white"
            app:tabSelectedTextColor="@color/color_black"
            app:tabIndicatorHeight="0dp"
            android:layout_alignParentBottom="true"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="?attr/actionBarSize">
            <ImageView
                android:id="@+id/ic_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_left"
                android:paddingLeft="@dimen/_16sdp"
                android:paddingTop="@dimen/_12sdp"
                android:paddingRight="@dimen/_8sdp"
                android:paddingBottom="@dimen/_16sdp"
                />
            <TextView
                android:id="@+id/toolbar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_12sdp"
                android:layout_centerHorizontal="true"
                android:maxWidth="@dimen/_225sdp"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="@android:color/white"
                android:textSize="@dimen/_16sdp"
                android:textStyle="normal"
                android:visibility="visible" />
        </RelativeLayout>
    </RelativeLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager_detail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

</RelativeLayout>
