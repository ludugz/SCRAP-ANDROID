<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:widget="http://schemas.android.com/apk/res-auto"
    android:background="@color/transparent"
    android:paddingLeft="@dimen/_10sdp"
    android:paddingRight="@dimen/_10sdp"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/img_coupon_item_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/coupon_item_1_bg"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/transparent"
            android:layout_weight=".75">

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight=".25"
            android:paddingTop="@dimen/_16sdp"
            android:paddingBottom="@dimen/_16sdp"
            android:paddingRight="@dimen/_16sdp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_eventName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@+id/line_content"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLines="2"
                android:text="君は明日と消えていった 君は明日と消えていった 君は明日と消えていった 君は明日と消えていった 君は明日と消えていった "
                android:textColor="@color/color_black"
                android:textSize="@dimen/_12sdp"
                android:textStyle="bold"
                android:layout_alignParentTop="true"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_below="@+id/tv_eventName"
                android:layout_marginTop="@dimen/_16sdp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="@string/available_term_adapter"
                    android:textSize="@dimen/_10sdp" />
                <TextView
                    android:id="@+id/tv_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_4sdp"
                    android:gravity="center_vertical"
                    android:text=" Expire on 2017.6.17（金）"
                    android:textColor="@color/color_black"
                    android:textSize="@dimen/_10sdp"
                    android:textStyle="bold"

                    />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>







</RelativeLayout>
